{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "sourceMap": true,
        "alwaysStrict": true,
        "declaration": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "typeRoots": [
            "../node_modules/@types/"
        ],
        "watch": true
    },
    "compileOnSave": true,
    "include": [
        "**/*.ts",
        "**/*.d.ts"
    ]
}